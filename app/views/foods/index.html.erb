

  <% @foods.each do |food| %>
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading bg-danger">
         <h3 class="panel-title">Danger Zone</h3>
      </div>
      <div class="panel-body">
        <%= link_to food_path(food) do %>
          <div class="col-sm-12">
            <%= food.business_name.upcase %>
          </br>
            Score: <%= food.avg_score.to_i %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
